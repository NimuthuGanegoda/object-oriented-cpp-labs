{
  "name": "object-oriented-cpp-labs",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/cmake:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "twxs.cmake"
      ],
      "settings": {
        "cmake.configureOnOpen": true,
        "cmake.buildDirectory": "${workspaceFolder}/build",
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
      }
    }
  },
  "workspaceFolder": "/workspaces/object-oriented-cpp-labs",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/object-oriented-cpp-labs,type=bind",
  "postCreateCommand": "bash scripts/build_and_test.sh"
}